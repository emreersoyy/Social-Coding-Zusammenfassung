package aufgabe1;

import java.util.Arrays;


public class Woerterzaehlen {
	
	
	 static String text="No, no, no, I kill the bus driver.";
	 static String[] words = text.split(" ");
	 public static void main(String[] args) {
	 Arrays.sort(words);
	 };
	 
     int cnt = 1;
     String actualWord = words[0];{
     for(int i=1;i<words.length;++i){
         if(!words[i].equals(actualWord)){
             System.out.println(actualWord+" kommt "+cnt+" mal vor.");
             actualWord = words[i];
             cnt = 1;
         }
         else{
             ++cnt;
         }
     }
     System.out.println(actualWord+" kommt "+cnt+" mal vor.");
}}
